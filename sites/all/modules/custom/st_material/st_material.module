function st_material_add($form,&$form_state,$id=NULL){
if(!empty($id)){
		$data = get_data_by_pks('st_material', $id);
		
		$form['#submit'][] = "st_material_edit_submit";
		$form['id']=array(
				'#type'=>'value',
				'#value'=>$id,
		);
	}	
$form['material_name']=array (
  '#type' => 'textfield',
  '#title' => 'Material name',
  '#size' => '255',
  '#attributes' => 
  array (
    'placeholder' => '',
    'maxlength' => '255',
  ),
  '#default_value' => isset($data->material_name)?$data->material_name:"",
);

$form['submit']=array('#type'=>'submit','#value'=>'Save');
return $form;
}
