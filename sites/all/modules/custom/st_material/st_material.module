function st_material_add_submit($form,&$form_state){

global $user;
$query = db_insert('st_material')
	 ->fields(array('material_name'=>$form_state['values']['material_name'],
	 		'created'=>time(),
		
	 )
	 		)->execute();
if($query>0){
    	drupal_set_message('st_material added successfully');
		drupal_goto('admins/st_material/add');	
    }
}
function st_material_edit_submit($form,&$form_state){
global $user;
$query = db_update('st_material')
	 ->fields(array('material_name'=>$form_state['values']['material_name'],'created'=>strtotime($form_state['values']['created']),'updated'=>strtotime($form_state['values']['updated']),'updatedby'=>$form_state['values']['updatedby'],'createdby'=>$form_state['values']['createdby'],))
	 ->condition('id', $form_state['values']['id'], '=')
	 ->execute();
if($form_state['values']['id']>0){
    	drupal_set_message('st_material update successfully');
		drupal_goto('admins/st_material/view');
    }
}
function st_material_view($form,&$form_state){
global $user;
	$query = db_select('st_material','tn')
	->extend('PagerDefault')
	->fields('tn')
	->orderBy('tn.id','desc')
	->limit(20);
	$result = $query->execute();
$rows_articles=array();
foreach ($result as $records){
//$created=util_date_format_short($records->created);
//$updated=util_date_format_short($records->updated);
/*if($records->deleted){
			 $deleted="Deleted";
            }*/
		/* else
		{
			//$deleted=l("<i class='icon-fixed-width icon-trash'></i>Delete",'admins/st_material/edit/'.$records->id,array('html'=>TRUE));
		} */
$rows_articles[] = array(l($records->id,'st_material/edit/'.$records->id),$records->material_name,$records->created,$records->updated,$records->updatedby,$records->createdby,);
}
$headers=array('Id','Material Name','Created','Updated','Updatedby','Createdby',);
$all_articles=theme('table', array('header' => $headers, 'rows' => $rows_articles,'empty'=>'No Record Found','attributes'=>array('class'=>array('list-table'),'style'=>'width:100%;')));
$all_articles .=theme('pager');
$form['all_articles']=array(
			'#markup'=>$all_articles,
	);
return $form;
}
function st_material_detail($form,&$form_state,$id=NULL){
global $user;
	$query = db_select('st_material','tn')
	->extend('PagerDefault')
	->fields('tn')
	->condition('tn.id',$id,'=')
	->orderBy('tn.id','desc');
	$result = $query->execute()->fetchObject();
$rows_articles=array();
if(!empty($result))
foreach ($result as $key => $value){



$rows_articles[] = array($key.' :: '.$value);
}

$all_articles=theme('table', array('header' => array(), 'rows' => $rows_articles,'empty'=>'No Record Found','attributes'=>array('class'=>array('list-table'),'style'=>'width:100%;')));
$all_articles .=theme('pager');
$form['all_articles']=array(
			'#markup'=>$all_articles,
	);
return $form;
}
