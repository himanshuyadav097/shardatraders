function st_material_type_add($form,&$form_state,$id=NULL){
	//material_status();
	//exit;
if(!empty($id)){
		$data = get_data_by_pks('st_material_type', $id);
		
		$form['#submit'][] = "st_material_type_edit_submit";
		$form['id']=array(
				'#type'=>'value',
				'#value'=>$id,
		);
	}	
$form['m_id']=array (
  '#type' => 'select',
  '#title' => 'Material Name',
  '#options' =>material_status(),
  '#attributes' => 
  array (
    'placeholder' => '',
  ),
  '#default_value' => isset($data->m_id)?$data->m_id:"",
);
$form['m_type']=array (
  '#type' => 'textfield',
  '#title' => 'Material SubCategory',
  '#size' => '255',
  '#attributes' => 
  array (
    'placeholder' => '',
    'maxlength' => '255',
  ),
  '#default_value' => isset($data->m_type)?$data->m_type:"",
);
$form['m_value']=array (
  '#type' => 'textfield',
  '#title' => 'Material value',
  '#size' => '255',
  '#attributes' => 
  array (
    'placeholder' => '',
    'maxlength' => '255',
  ),
  '#default_value' => isset($data->m_value)?$data->m_value:"",
);
$form['m_unit']=array (
  '#type' => 'select',
  '#title' => 'Material unit',
  
	'#options'=>units(),
  '#attributes' => 
  array (
  
  ),
  '#default_value' => isset($data->m_unit)?$data->m_unit:"",
);

$form['submit']=array('#type'=>'submit','#value'=>'Save');
return $form;
}
