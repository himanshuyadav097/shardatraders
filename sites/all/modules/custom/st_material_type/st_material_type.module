function st_material_type_add_submit($form,&$form_state){
global $user;
$query = db_insert('st_material_type')
	 ->fields(array('m_id'=>$form_state['values']['m_id'],
	 		'm_type'=>$form_state['values']['m_type'],
	 		'm_value'=>$form_state['values']['m_value'],
	 		'm_unit'=>$form_state['values']['m_unit'],
	 		'created'=>time(),
	 )
	 		)->execute();
if($query>0){
    	drupal_set_message('st_material_type added successfully');
		drupal_goto('admins/st_material_type/view');	
    }
}
function st_material_type_edit_submit($form,&$form_state){
global $user;
$query = db_update('st_material_type')
	 ->fields(array('m_id'=>$form_state['values']['m_id'],'m_type'=>$form_state['values']['m_type'],'m_value'=>$form_state['values']['m_value'],'m_unit'=>$form_state['values']['m_unit'],'created'=>strtotime($form_state['values']['created']),'updated'=>strtotime($form_state['values']['updated']),'updatedby'=>$form_state['values']['updatedby'],'createdby'=>$form_state['values']['createdby'],))
	 ->condition('id', $form_state['values']['id'], '=')
	 ->execute();
if($form_state['values']['id']>0){
    	drupal_set_message('st_material_type update successfully');
		drupal_goto('admins/st_material_type/view');
    }
}
function st_material_type_view($form,&$form_state){
global $user;
	$query = db_select('st_material_type','tn')
	->extend('PagerDefault')
	->fields('tn')
	->orderBy('tn.id','desc')
	->limit(20);
	$result = $query->execute();
$rows_articles=array();
foreach ($result as $records){
//$created=util_date_format_short($records->created);
//$updated=util_date_format_short($records->updated);
/*if($records->deleted){
			 $deleted="Deleted";
            }
		else
		{
			//$deleted=l("<i class='icon-fixed-width icon-trash'></i>Delete",'admins/st_material_type/edit/'.$records->id,array('html'=>TRUE));
		}*/
	$material_name=material_name($records->m_id);
$rows_articles[] = array(l($records->id,'st_material_type/edit/'.$records->id),$material_name,$records->m_type,$records->m_value,$records->m_unit,$records->created,$records->updated,$records->updatedby,$records->createdby,);
}
$headers=array('Id','Material Name','Material type','Material value','Material unit','Created','Updated','Updatedby','Createdby',);
$all_articles=theme('table', array('header' => $headers, 'rows' => $rows_articles,'empty'=>'No Record Found','attributes'=>array('class'=>array('list-table'),'style'=>'width:100%;')));
$all_articles .=theme('pager');
$form['all_articles']=array(
			'#markup'=>$all_articles,
	);
return $form;
}
function st_material_type_detail($form,&$form_state,$id=NULL){
global $user;
	$query = db_select('st_material_type','tn')
	->extend('PagerDefault')
	->fields('tn')
	->condition('tn.id',$id,'=')
	->orderBy('tn.id','desc');
	$result = $query->execute()->fetchObject();
$rows_articles=array();
if(!empty($result))
foreach ($result as $key => $value){

$rows_articles[] = array($key.' :: '.$value);
}

$all_articles=theme('table', array('header' => array(), 'rows' => $rows_articles,'empty'=>'No Record Found','attributes'=>array('class'=>array('list-table'),'style'=>'width:100%;')));
$all_articles .=theme('pager');
$form['all_articles']=array(
			'#markup'=>$all_articles,
	);
return $form;
}
