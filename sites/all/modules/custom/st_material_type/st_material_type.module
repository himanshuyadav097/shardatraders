 	foreach($result as $res){
		
 		 $mat[0]='Select';
		 $mat[]=$res->material_name;
		//$mat[]=$res->id;
		//$res=$res->id;
	} 
	return $mat;
}
function material_name($id){
	
	$result=db_query("SELECT material_name from st_material where id=$id")->fetchAll();
	return $result[0]->material_name;
}

